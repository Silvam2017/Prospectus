@model IEnumerable<Player>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4" >
        <div class="col-6">
            <h2 class="text-primary">
                Player List
            </h2>
        </div>
        <div class="col-6">
            <br /><br />
        </div>
    </div>
    @if(Model.Count() > 0)
    {
        <table class=""contenteditable table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Player Name
                    </th>
                    <th>
                        Position
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">
                            @obj.player
                        </td>
                        <td width="30%">
                            @obj.position
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Players Exist in Database </p>
    }
</div>

